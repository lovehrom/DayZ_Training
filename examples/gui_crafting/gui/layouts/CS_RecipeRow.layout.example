        </TextWidget>
    </Widget>

    <!-- ========== RESULT + BUTTON ========== -->
    <Widget>
        <Size x="120" y="120" />

        <!-- Equals sign -->
        <TextWidget>
            <Pos x="-10" y="50" />
            <Size x="10" y="20" />
            <Text text="=" align="center" size="14" />
            <Color color="ARGB(255, 200, 200, 200)" />
        </TextWidget>

        <!-- Result preview -->
        <ItemPreviewWidget Name="PreviewResult">
            <Pos x="10" y="10" />
            <Size x="100" y="60" />
            <Color color="ARGB(255, 40, 80, 40)" />
        </ItemPreviewWidget>

        <!-- Result name background -->
        <Widget Name="PanelNameBGResult">
            <Pos x="10" y="5" />
            <Size x="100" y="20" />
            <Color color="ARGB(100, 0, 150, 0)" />
        </Widget>

        <!-- Result name -->
        <TextWidget Name="TextResultName">
            <Pos x="10" y="5" />
            <Size x="100" y="20" />
            <Text text="Result" align="center" size="10" />
            <Color color="ARGB(255, 255, 255, 255)" />
        </TextWidget>

        <!-- Result quantity -->
        <TextWidget Name="TextResultQty">
            <Pos x="10" y="72" />
            <Size x="100" y="18" />
            <Text text="x1" align="center" size="10" />
            <Color color="ARGB(255, 200, 255, 200)" />
        </TextWidget>

        <!-- Craft button -->
        <ButtonWidget Name="ButtonCraft">
            <Pos x="10" y="92" />
            <Size x="100" y="25" />
            <Text text="CRAFT" align="center" size="12" />
            <Color color="ARGB(255, 62, 174, 70)" />
            <HoverColor color="ARGB(255, 82, 194, 90)" />
            <PressedColor color="ARGB(255, 42, 154, 50)" />
        </ButtonWidget>
    </Widget>
</Widget>

<!-- NOTES:
- Supports up to 5 ingredients (adjust visibility in code)
- Each ingredient has: preview, name, quantity, background color
- Color coding: Red (missing) / Green (available)
- Result shows on right with craft button
- Use WrapSpacerWidget to arrange rows vertically
-->
