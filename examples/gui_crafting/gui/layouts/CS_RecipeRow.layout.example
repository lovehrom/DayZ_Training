        </Widget>

        <TextWidget Name="TextQty4">
            <Pos x="15" y="72" />
            <Size x="100" y="18" />
            <Text text="x1" align="center" size="10" />
        </TextWidget>

        <TextWidget Name="TextPlus4">
            <Pos x="120" y="50" />
            <Size x="10" y="20" />
            <Text text="+" align="center" size="14" />
        </TextWidget>
    </Widget>

    <!-- ========== ITEM 5 ========== -->
    <Widget Name="PanelItem5">
        <Size x="130" y="120" />
        <Visible>0</Visible>

        <ItemPreviewWidget Name="PreviewItem5">
            <Pos x="15" y="10" />
            <Size x="100" y="60" />
        </ItemPreviewWidget>

        <Widget Name="PanelNameBG5">
            <Pos x="15" y="5" />
            <Size x="100" y="20" />
        </Widget>

        <TextWidget Name="TextName5">
            <Pos x="15" y="5" />
